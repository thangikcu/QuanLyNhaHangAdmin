<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroudMain"
    android:padding="@dimen/layout_padding"
    tools:context="com.coffeehouse.view.fragment.ManagerFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_weight="1.3"
        android:background="@color/colorBackgroudFrame"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">


        <Button
            android:id="@+id/btn_ql_thuc_don"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_food_and_drink"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_thuc_don" />

        <Button
            android:id="@+id/btn_ql_loai_mon"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_loai_mon"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_loai_mon" />

        <Button
            android:id="@+id/btn_ql_ban"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_table"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_ban" />

        <Button
            android:id="@+id/btn_ql_nhan_vien"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_employee"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_nhan_vien" />

        <Button
            android:id="@+id/btn_ql_tin_tuc"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_news"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_tin_tuc"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ql_khach_hang"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/menu_manager_button_background"
            android:drawableLeft="@drawable/ic_customer"
            android:paddingLeft="4dp"
            android:text="@string/quan_ly_khach_hang"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/colorBackgroudFrame">

        <FrameLayout
            android:id="@+id/manager_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
